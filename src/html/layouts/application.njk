<!doctype html>
<!--#if expr="$HTTP_COOKIE=/fonts\-loaded\=true/" -->
<html lang="{{ lang }}" class="fonts-loaded">
<!--#else -->
<html lang="{{ lang }}">
<!--#endif -->
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

  <title>{% block metaTitle %}Atomic - by Jaywing{% endblock %}</title>

  {% block metaTags %}{% endblock %}

  <meta name="format-detection" content="telephone=no">

  {% include 'shared/app-icons.njk' %}

  <link rel="stylesheet" href="/stylesheets/styles.css">

  <script>if(document.documentElement){document.documentElement.classList.add('js');}</script>
  {% block metaHead %}{% endblock %}
</head>

<body>

  <header role="banner" class="Site-header">
    {% block pageHead %}{% endblock %}
    <div class="o-Container o-Container--centered o-Container--collapse">    
      {% include 'shared/site-name.njk' %}
      {% include 'shared/main-nav.njk' %}
    </div>
  </header>

  <main id="content">
    {% block content %}{% endblock %}
  </main>

  <footer role="contentinfo" class="o-Site-footer">
    <div class="o-Container o-Container--centered">
      <p>&copy; <u id="copyright-year">{{ author.createdYear }}</u> - {{ author.footerText }} <a href="{{ author.url }}">{{ author.name }}</a></p>
    </div>
  </footer>

  <script src="/javascripts/app.js" async></script>

  {% block javascript %}{% endblock %}

</body>
</html>
